/*  Syntax Quick Reference for Jeet
	--------------------------
	column(ratios = 1, offset = 0, cycle = 0, uncycle = 0, gutter = jeet.gutter)
	span(ratio = 1, offset = 0)
	shift(ratios = 0, col_or_span = column, gutter = jeet.gutter)
	unshift()
	edit()
	center(max_width = 1410px, pad = 0)
	stack(pad = 0, align = false)
	unstack()
	align(direction = both)
	cf()

	For more info see:
		Kouto Swiss Doc: http://kouto-swiss.io/
		Jeet Doc: http://jeet.gs

	And of course, look in node_modules for axis-css and jeet
*/
@import "kouto-swiss"
@import "jeet"

@font-face
	font-family Mairy
	font-style normal
	src url(../fonts/mairy_book-webfont.ttf)

@font-face
	font-family Mairy Hairline
	font-style normal
	src url(../fonts/mairy_hairline-webfont.ttf)

@font-face
	font-family Mairy Light
	font-style normal
	src url(../fonts/mairy_light-webfont.ttf)

@font-face
	font-family Geometria Light
	font-style normal
	src url(../fonts/Geometria-Light.otf)

normalize()

body
	color rgb(255,255,255)
	font-family Mairy
	font-size 14px

.content
	center(70%)

header
	position absolute
	width 100%
	height 80px
	margin-top 20px

.logo-brand
	background-image url(../img/logo-name.png)
	background-size contain
	background-repeat no-repeat
	width 162px
	height 80px
	float left

#menu
	position fixed
	right 20px
	height 40px
	width 40px
	margin 10px
	cursor pointer

	line
		stroke #ffffff
		stroke-width 5px

section
	height 100vh
	display flex
	flex-direction column
	align-items	center
	justify-content center
	background-size cover
	background-repeat no-repeat
	background-position top center
	h1
		font-family Mairy Hairline
		font-size 6em
		margin 10px 0
		span
			font-family Mairy Light

.section1
	background-image url(../img/bg1.png)
	background-color #df105b
	padding-top 120px
	.home-subtitle
		width 70%
		font-size 2em
		font-family Geometria Light
	.btn-sponsor
		background rgba(73, 201, 199, 0.4)
		padding 10px 15%
		text-transform uppercase
		text-decoration none
		color #fff
		font-size 1.5em
		transition-duration 0.5s
	.btn-sponsor:hover
		background rgba(73, 201, 199, 0.7)

.section2
	color #df105b
	background-color #f9f9f9

@media screen and (max-width: 1024px)
	.content
		max-width 100%
		width 80%
	section
		min-height 100vh
		height auto
		h1
			font-size 3em
	.section1 
		padding-top 40px
		.home-subtitle
			width 100%
			font-size 1.5em

@media screen and (max-width: 769px)
	.content
		width 90%
	section
		h1
			font-size 2.5em
	.section1 
		.home-subtitle
			width 100%
			font-size 1.5em
	#menu
		right 0